{
  "version": 2,
  "outputDirectory": "build",
  "builds": [
    {
      "src": "package.json",
      "use": "build-scripts/build.js",
      "config": {
        "distDir": "test"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "dist/index.html"
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    },
    "commands": [
      {
        "cmd": "yarn install",
        "cwd": "."
      },
      {
        "cmd": "yarn build",
        "cwd": "."
      }
    ]
  }
}
